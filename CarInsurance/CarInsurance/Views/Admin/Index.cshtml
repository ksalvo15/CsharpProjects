@using CarInsurance.ViewModel
@model CarInsurance.Models.Insuree
@model CarInsurance.Controllers.AdminController
@model List<QuoteVm>

@{
    ViewBag.Title = "Admin View";
}

<div class="row no-gutters m-3">
    <div classs="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Sign-ups</h5>
        </div>
        <div class="card-body">
            @foreach (var insuree in Model)
            {
                using (Html.BeginForm("Index", "Admin", FormMethod.Post))
                {
                    <input type="hidden" name="Id" value="@insuree.Id" />
                    <div class="row mb-3">
                        <div class="col">
                            @insuree.FirstName
                        </div>
                        <div class="col">
                            @insuree.LastName
                        </div>
                        <div class="col">
                            @insuree.Email
                        </div>
                        <div class="col">
                            @insuree.FinalQuote
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>