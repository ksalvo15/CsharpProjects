﻿@using CarInsurance1.ViewModel
@model List<QuoteVm>

@{
    ViewBag.Title = "Admin";
}
<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Sign-ups</h5>
        </div>
        <div class="card-body">
            @foreach (var quote in Model)
            {
                using (Html.BeginForm("Index", "Admin", FormMethod.Post))
                {
                    <div class="row mb-3">
                        <div class="col">
                            @quote.FirstName
                        </div>
                        <div class="col">
                            @quote.LastName
                        </div>
                        <div class="col">
                            @quote.EmailAddress
                        </div>
                        <div class="col">
                            @quote.Quote
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
